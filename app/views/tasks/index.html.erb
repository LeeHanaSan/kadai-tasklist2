<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  
    <%= link_to "新規タスクの投稿",new_task_path %>
  
  <ul>
    <% @tasks.each do |task| %>
     <li><%= link_to task.id,task %> : <%= task.status %> &gt; <%= task.content %></li>
    <% end %>
  </ul>
  
  <%= link_to 'Log out', logout_path, method: :delete, class: 'btn btn-lg btn-primary' %>
  
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the Tasklist</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
      
      <%= link_to 'Log in', login_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>